---
interface Props {
  browser: string
  version: number
}

const { browser, version } = Astro.props
---

<article class="add-to">
  <img src={`/logo-${browser}.svg`} alt={`${browser} browser logo`}>
  <div class="add-to-content">
    <h3>Add to <span class="browser-name">{browser}</span></h3>
    <p>Minimum version <span class="version">{version}</span></p>
  </div>
  <img src="/bg-dots.svg" alt="Dotted line">
  <button class="button add-to-btn">Add & Install Extension</button>
</article>

<style>
  .add-to {
    --accent: var(--s-blue);

    box-shadow: 0px 10px 15px rgba(0, 0, 0, .09);
    padding: 1.2rem;
    display: flex;
    width: 270px;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    overflow-x: hidden;
    border-radius: 10px
  }

  .add-to:nth-child(2) { transform: translateY(35px) }

  .add-to:nth-child(3) { transform: translateY(70px) }

  .add-to-content {
    margin-bottom: 1.6rem;
    text-align: center;
    font-size: .96rem
  }

  .add-to img {
    margin-bottom: 1.5rem
  }

  .add-to-content h3 {
    margin-bottom: .5rem
  }

  .add-to-content p {
    font-size: .82rem;
  }

  .add-to-btn { width: 100% }

  @media (width <= 768px) {
    .add-to:nth-child(2) { transform: translateY(0px) }

    .add-to:nth-child(3) { transform: translateY(0px) }
  }
</style>
